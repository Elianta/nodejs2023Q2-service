generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  login        String
  passwordHash String
  version      Int      @default(1)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("users")
}

model Track {
  id       String @id @default(uuid())
  name     String
  duration Int

  artistId String?
  albumId  String?

  @@map("tracks")
}
