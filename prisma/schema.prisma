generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  login        String
  passwordHash String
  version      Int      @default(1)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("users")
}

model Track {
  id       String @id @default(uuid())
  name     String
  duration Int

  artistId String?
  artist   Artist? @relation(fields: [artistId], references: [id], onDelete: SetNull)

  albumId String?

  @@map("tracks")
}

model Artist {
  id     String  @id @default(uuid())
  name   String
  grammy Boolean

  tracks Track[]

  @@map("artists")
}
